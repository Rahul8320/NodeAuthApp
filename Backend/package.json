{
  "name": "node-typescript-auth-api",
  "version": "1.0.0",
  "description": "Node.js typescript authentication api",
  "main": "./build/app.js",
  "scripts": {
    "prebuild": "rimraf ./build",
    "build": "npx tsc -p .",
    "start": "node .",
    "dev": "nodemon --exec npx ts-node ./src/app.ts",
    "pretest": "npm run build",
    "test": "npx jest --detectOpenHandles"
  },
  "keywords": [
    "node.js",
    "express",
    "api",
    "typescript",
    "jwt",
    "jest"
  ],
  "author": "Rahul Dey",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "helmet": "^7.1.0",
    "joi": "^17.13.1",
    "morgan": "^1.10.0",
    "supertest": "^7.0.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.21",
    "@types/helmet": "^4.0.0",
    "@types/jest": "^29.5.12",
    "@types/morgan": "^1.9.9",
    "@types/supertest": "^6.0.2",
    "jest": "^29.7.0",
    "node-ts": "^6.0.1",
    "nodemon": "^3.1.1",
    "rimraf": "^5.0.7",
    "typescript": "^5.4.5"
  }
}
